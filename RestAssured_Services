Get - retrieving
Post - Create new resource, adding new entity
Delete - Deleting existing resource
Put - Updating to existing resource, modifying new entity
************************************************************************************************************

package getRequest;

import org.json.simple.JSONObject;

import io.restassured.RestAssured;
import io.restassured.RestAssured.*;
import io.restassured.specification.RequestSpecification;

public class ModifyData {

	RequestSpecification request = RestAssured.given();
	
	request.header("Content-Type","application/json"); //adding header
	
	JSONObject json = new JSONObject(); //JSON onbest to create the data to be inserted
	json.put("id","25");
	json.put("title", "Book");
	json.put("author", "Kaushik");
	
	request.body(json.toJSONString); //getting response body
	
	Response response = request.post("End Point URl"); //validating response
	response.getStatusCode;
  
}

